<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bkgd_splash</item>
        <item name="android:navigationBarColor">@color/azul_claro</item>
        <item name="android:statusBarColor">@color/azul_claro</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- Botones -->
    <style name="BtnMoradoOscuro">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/morado_oscuro</item>
        <item name="android:fontFamily">@font/parrafo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">10dp</item>
        <item name="layout_constraintDimensionRatio">9:2</item>
    </style>

    <style name="BtnMoradoClaro">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/morado_claro</item>
        <item name="android:fontFamily">@font/parrafo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="layout_constraintDimensionRatio">6:1</item>
    </style>

    <style name="BtnRojoClaro" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/rojo_claro</item>
        <item name="android:fontFamily">@font/parrafo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">12:2</item>
    </style>

    <style name="BtnRegresar1" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bkgd_button_regresar_1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">2:1</item>
    </style>

    <style name="BtnCerrar" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bkgd_button_cerrar</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="BtnConfig" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/parrafo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">55dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BtnCentrarMapa">
        <item name="android:background">@drawable/bkgd_circulo</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="BtnDirecciones">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/azul_oscuro</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:clickable">true</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="BtnEmergencia">
        <item name="android:background">@drawable/bkgd_button_emergencia</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">true</item>
    </style>


    <!-- TextView -->
    <style name="TxtViewBlanco" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/blanco</item>
        <item name="android:fontFamily">@font/titulo</item>
        <item name="android:textColor">@color/azul_oscuro</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_titulo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TxtViewAzulOscuro" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/azul_oscuro</item>
        <item name="android:fontFamily">@font/subtitulo</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">@dimen/text_size_subtitulo</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TxtViewTransparente" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/parrafo</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TxtViewTransparente_LetraAzulOscuro" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/parrafo</item>
        <item name="android:textColor">@color/azul_oscuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TxtViewNumTelefonico" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/parrafo</item>
        <item name="android:textColor">@color/azul_oscuro</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TxtViewTransparenteConfig" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/parrafo_bold</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="layout_constraintDimensionRatio">5:1</item>
    </style>


    <!-- EditText -->
    <style name="EditTextTransparente" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bkgd_borde_azul_oscuro</item>
        <item name="android:fontFamily">@font/parrafo</item>
        <item name="android:textColor">@color/azul_oscuro</item>
        <item name="android:textColorHint">#80213071</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="EditTextCodigo" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bkgd_codigos</item>
        <item name="android:fontFamily">@font/parrafo</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">@dimen/text_size_parrafo</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>


    <!-- Separador -->
    <style name="ViewSeparador" >
        <item name="android:background">@color/azul_oscuro</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- ConstraintLayout -->
    <style name="ConsLytTituloBlanco">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/blanco</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">14:3</item>
    </style>

    <style name="ConsLytBtnMorado">
        <item name="android:background">@drawable/bkgd_esquinas_redondeadas</item>
        <item name="android:backgroundTint">@color/blanco</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">14:3</item>
    </style>

    <!-- Icon -->
    <style name="BkgdIcon">
        <item name="android:background">@drawable/bkgd_button_regresar_2</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <!-- Icon de contraseña-->
    <style name="BkgdIconContraseña">
        <item name="android:background">@drawable/bkgd_icon_ojo_abierto</item>
        <item name="android:text">show</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <!-- View.-->
    <style name="ViewCirculoExpandible">
        <item name="android:visibility">invisible</item>
        <item name="android:background">@drawable/bkgd_circulo</item>
        <item name="android:backgroundTint">@color/rojo_claro</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ViewSeparadorAuxiliar" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintVertical_bias">0.0</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

</resources>