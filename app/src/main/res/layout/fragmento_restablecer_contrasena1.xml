<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="hideKeyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true"
    tools:context=".frontend.usuario.fragmento.FragmentoRestablecerContrasena1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_parentPrincipal_restablecer_contraseña_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkgd_esquinas_superiores_redondeadas">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_editView_restablecer_contraseña_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_restablecer_contraseña_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_editView_restablecer_contraseña_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3_textView_editView_restablecer_contraseña_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_restablecer_contraseña_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4_textView_editView_restablecer_contraseña_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <Button
            android:id="@+id/button_regresar_restablecer_contraseña_1"
            style="@style/BtnRegresar1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline1_button_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView_titulo_restablecer_contraseña_1"
            style="@style/TxtViewBlanco"
            android:text="@string/titulo_inicia_sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_1"
            app:layout_constraintTop_toTopOf="@id/button_regresar_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/textView_instrucciones1_restablecer_contraseña_1"
            style="@style/TxtViewAzulOscuro"
            android:text="@string/instrucciones_restablecer_contraseña"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_1"
            app:layout_constraintTop_toBottomOf="@id/textView_titulo_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView_instrucciones2_restablecer_contraseña_1"
            style="@style/TxtViewTransparente"
            android:text="@string/instrucciones1_restablecer_contraseña_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:2"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_1"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones1_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.05" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLyt_countryCode_restablecer_contraseña_1"
            style="@style/EditTextTransparente"
            android:paddingRight="0dp"
            android:paddingLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="35:20"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_1"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.05" >

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1_celularCountryCode_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2_celularCountryCode_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <TextView
                android:id="@+id/textView_celularCountryCode"
                style="@style/TxtViewNumTelefonico"
                android:textStyle="bold"
                android:text="@string/celularCountryCodeEditTxt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline1_celularCountryCode_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_countryCode_restablecer_contraseña_1"
                style="@style/TxtViewNumTelefonico"
                android:gravity="center_vertical|left"
                android:inputType="phone"
                android:text="@string/celularCountryCodeTxtView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline2_celularCountryCode_1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/editText_numTelefonico_restablecer_contraseña_1"
            style="@style/EditTextTransparente"
            android:hint="@string/celularEditTxt"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="42:10"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline3_textView_editView_restablecer_contraseña_1"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            android:id="@+id/button_reenviar_codigo_restablecer_contraseña_1"
            style="@style/TxtViewTransparente"
            android:text="@string/reenviarCodigoBtn"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_parrafo_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_restablecer_contraseña_1"
            app:layout_constraintTop_toBottomOf="@id/editText_numTelefonico_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.1" />

        <Button
            android:id="@+id/button_siguiente_restablecer_contraseña_1"
            style="@style/BtnMoradoOscuro"
            android:text="@string/siguienteBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_restablecer_contraseña_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_restablecer_contraseña_1"
            app:layout_constraintTop_toBottomOf="@+id/button_reenviar_codigo_restablecer_contraseña_1"
            app:layout_constraintVertical_bias="0.1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>