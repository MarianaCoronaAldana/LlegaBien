<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:background="@drawable/bkgd_esquinas_redondeadas"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_textView_button_notificarBateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_textView_button_notificarBateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <TextView
        android:id="@+id/textView_titulo_notificarBateria"
        style="@style/TxtViewTransparente"
        android:layout_width="328dp"
        android:layout_height="33dp"
        android:fontFamily="@font/subtitulo"
        android:lineSpacingExtra="4dp"
        android:text="ADVERTENCIA"
        android:textColor="@color/rojo_claro"
        android:textSize="@dimen/text_size_subtitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_button_notificarBateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_button_notificarBateria"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/textView_pregunta_notificarBateria"
        style="@style/TxtViewTransparente"
        android:layout_width="328dp"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/subtitulo"
        android:lineSpacingExtra="4dp"
        android:text="Su dispositivo móvil tiene menos del 20% de bateria. Se notificará sus contactos de emergencia."
        android:textSize="@dimen/text_size_subtitulo"
        app:layout_constraintDimensionRatio="9:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_button_notificarBateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_button_notificarBateria"
        app:layout_constraintTop_toBottomOf="@id/textView_titulo_notificarBateria" />

    <Button
        android:id="@+id/button_confirmarnotificarBateria"
        style="@style/BtnRojoClaro"
        android:text="Enterado"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_button_notificarBateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_button_notificarBateria"
        app:layout_constraintTop_toBottomOf="@id/textView_pregunta_notificarBateria"
        app:layout_constraintVertical_bias="0.642" />

</androidx.constraintlayout.widget.ConstraintLayout>