<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".frontend.usuario.fragmento.FragmentoIniciarSesion2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_parentPrincipal_inicia_sesion_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkgd_esquinas_superiores_redondeadas">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_editView_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_editView_codigo_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_editView_codigo_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.317" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3_editView_codigo_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.467" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4_editView_codigo_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.533" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5_editView_codigo_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.683" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6_editView_codigo_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.749" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_editView_inicia_sesion_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <Button
            android:id="@+id/button_regresar_inicia_sesion_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bkgd_button_regresar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline1_button_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView_titulo_inicia_sesion_2"
            style="@style/TxtViewBlanco"
            android:text="@string/titulo_inicia_sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_2"
            app:layout_constraintTop_toTopOf="@id/button_regresar_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView_instrucciones1_inicia_sesion_2"
            style="@style/TxtViewAzulOscuro"
            android:text="@string/instrucciones1_inicia_sesion2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/textView_titulo_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView_instrucciones2_inicia_sesion_2"
            style="@style/TxtViewTransparente"
            android:text="@string/instruccionesCodigoCorreoTxtView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones1_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editText1_codigo_inicia_sesion_2"
            style="@style/EditTextCodigo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline1_editView_codigo_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.1"
            tools:ignore="LabelFor"/>

        <EditText
            android:id="@+id/editText2_codigo_inicia_sesion_2"
            style="@style/EditTextCodigo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline3_editView_codigo_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline2_editView_codigo_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.1"
            tools:ignore="LabelFor"/>

        <EditText
            android:id="@+id/editText3_codigo_inicia_sesion_2"
            style="@style/EditTextCodigo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline5_editView_codigo_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline4_editView_codigo_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.1"
            tools:ignore="LabelFor"/>

        <EditText
            android:id="@+id/editText4_codigo_inicia_sesion_2"
            style="@style/EditTextCodigo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline6_editView_codigo_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.1"
            tools:ignore="LabelFor"/>

        <Button
            android:id="@+id/button_reenviar_codigo_inicia_sesion_2"
            style="@style/TxtViewTransparente"
            android:text="@string/reenviarCodigoBtn"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_parrafo_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@id/editText1_codigo_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.1" />

        <Button
            android:id="@+id/button_verificar_inicia_sesion_2"
            style="@style/BtnMoradoOscuro"
            android:text="@string/verificarBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_inicia_sesion_2"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_inicia_sesion_2"
            app:layout_constraintTop_toBottomOf="@+id/button_reenviar_codigo_inicia_sesion_2"
            app:layout_constraintVertical_bias="0.1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>