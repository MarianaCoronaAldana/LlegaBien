<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="hideKeyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true"
    tools:context=".frontend.usuario.fragmento.FragmentoIniciarSesion1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_parentPrincipal_inicia_sesion_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkgd_esquinas_superiores_redondeadas">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_editView_inicia_sesion_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_editView_inicia_sesion_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_inicia_sesion_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_inicia_sesion_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

        <Button
            android:id="@+id/button_cerrar_inicia_sesion_1"
            style="@style/BtnCerrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline2_button_inicia_sesion_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView_titulo_inicia_sesion_1"
            style="@style/TxtViewBlanco"
            android:text="@string/titulo_inicia_sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_1"
            app:layout_constraintTop_toTopOf="@id/button_cerrar_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView_instrucciones_inicia_sesion_1"
            style="@style/TxtViewAzulOscuro"
            android:text="@string/instrucciones_inicia_sesion1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/textView_titulo_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editText_correo_inicia_sesion_1"
            style="@style/EditTextTransparente"
            android:hint="@string/correoTxtView"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/editText_contraseña_inicia_sesion_1"
            style="@style/EditTextTransparente"
            android:hint="@string/contraseñaTxtView"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/editText_correo_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.05" />

        <RadioButton
            android:id="@+id/radioBtn_recordar_inicia_sesion_1"
            style="@style/TxtViewTransparente"
            android:text="@string/recordar_inicia_sesion1"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_parrafo_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toStartOf="@id/button_contraseña_olvidada_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/editText_contraseña_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            android:id="@+id/button_contraseña_olvidada_inicia_sesion_1"
            style="@style/TxtViewTransparente"
            android:gravity="right|center_vertical"
            android:text="@string/contraseñaOlvidada_inicia_sesion1"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_parrafo_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toEndOf="@id/radioBtn_recordar_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/editText_contraseña_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.05" />

        <Button
            android:id="@+id/button_inicia_inicia_sesion_1"
            style="@style/BtnMoradoOscuro"
            android:text="@string/iniciaBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/editText_contraseña_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.3" />

        <Button
            android:id="@+id/button_registrarse_inicia_sesion_1"
            style="@style/TxtViewTransparente"
            android:text="@string/registrarse_inicia_sesion1"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_inicia_sesion_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_inicia_sesion_1"
            app:layout_constraintTop_toBottomOf="@id/button_inicia_inicia_sesion_1"
            app:layout_constraintVertical_bias="0.3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>