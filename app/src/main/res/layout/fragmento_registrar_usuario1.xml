<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="hideKeyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true"
    tools:context=".frontend.usuario.fragmento.FragmentoRegistrarUsuario1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_parentPrincipal_registro_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkgd_esquinas_superiores_redondeadas">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_editView_registro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_editView_registro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_registro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_registro_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

        <Button
            android:id="@+id/button_cerrar_registro_1"
            style="@style/BtnCerrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline2_button_registro_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView_titulo_registro_1"
            style="@style/TxtViewBlanco"
            android:text="@string/titulo_registro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toTopOf="@id/button_cerrar_registro_1"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView_instrucciones1_registro_1"
            style="@style/TxtViewAzulOscuro"
            android:text="@string/instrucciones_registro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toBottomOf="@id/textView_titulo_registro_1"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView_instrucciones2_registro_1"
            style="@style/TxtViewTransparente"
            android:text="@string/instrucciones1_registro1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones1_registro_1"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editText_nombres_registro_1"
            style="@style/EditTextTransparente"
            android:hint="@string/nombresTxtView"
            android:inputType="textAutoCorrect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_registro_1"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/editText_apellidos_registro_1"
            style="@style/EditTextTransparente"
            android:hint="@string/apellidosTxtView"
            android:inputType="textAutoCorrect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toBottomOf="@id/editText_nombres_registro_1"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editText_fechaNacimiento_registro_1"
            style="@style/EditTextTransparente"
            android:focusable="false"
            android:hint="@string/fechaNacimientoTxtView"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toBottomOf="@id/editText_apellidos_registro_1"
            app:layout_constraintVertical_bias="0.051" />

        <Button
            android:id="@+id/button_siguiente_registro_1"
            style="@style/BtnMoradoOscuro"
            android:text="@string/siguienteBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_registro_1"
            app:layout_constraintTop_toBottomOf="@id/editText_fechaNacimiento_registro_1"
            app:layout_constraintVertical_bias="0.3"/>

        <Button
            android:id="@+id/button_iniciarSesion_registro_1"
            style="@style/TxtViewTransparente"
            android:text="@string/iniciarSesion_registro1"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_registro_1"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_registro_1"
            app:layout_constraintTop_toBottomOf="@id/button_siguiente_registro_1"
            app:layout_constraintVertical_bias="0.3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>