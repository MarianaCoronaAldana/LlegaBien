<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/morado_oscuro"
    tools:context=".frontend.usuario.fragmento.FragmentoEditarPerfilUsuario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_parentPrincipal_editarPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_fondo_editarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_editView_editarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_editView_editarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textViewTitulo_editarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button1_editarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.73" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button2_editarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <View
            android:id="@+id/view_fondoAzulClaro_editarPerfil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bkgd_esquinas_superiores_redondeadas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0"
            app:layout_constraintTop_toTopOf="@id/guideline_fondo_editarPerfil"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_regresar_editarPerfil"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bkgd_button_regresar_rellenado"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="19:4"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView_titulo_editarPerfil"
            style="@style/TxtViewBlanco"
            android:elevation="2dp"
            android:text="@string/titulo_editarPerfil"
            android:textSize="@dimen/text_size_titulo_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textViewTitulo_editarPerfil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView_instrucciones_editarPerfil"
            style="@style/TxtViewAzulOscuro"
            android:text="@string/instrucciones_editarPerfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/textView_titulo_editarPerfil"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/editText_nombres_editarPerfil"
            style="@style/EditTextTransparente"
            android:hint="@string/nombresTxtView"
            android:inputType="textAutoCorrect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones_editarPerfil"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editText_apellidos_editarPerfil"
            style="@style/EditTextTransparente"
            android:hint="@string/apellidosTxtView"
            android:inputType="textAutoCorrect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/editText_nombres_editarPerfil"
            app:layout_constraintVertical_bias="0.05" />

        <EditText
            android:id="@+id/editText_fechaNacimiento_editarPerfil"
            style="@style/EditTextTransparente"
            android:focusable="false"
            android:hint="@string/fechaNacimientoTxtView"
            android:inputType="date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/editText_apellidos_editarPerfil"
            app:layout_constraintVertical_bias="0.052" />

        <EditText
            android:id="@+id/editText_correo_editarPerfil"
            style="@style/EditTextTransparente"
            android:hint="@string/correoTxtView"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/editText_fechaNacimiento_editarPerfil"
            app:layout_constraintVertical_bias="0.058" />

        <EditText
            android:id="@+id/editText_celular_editarPerfil"
            style="@style/EditTextTransparente"
            android:hint="@string/celularTxtView"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/editText_correo_editarPerfil"
            app:layout_constraintVertical_bias="0.08" />

        <Button
            android:id="@+id/button1_cambiarContra_editarPerfil"
            style="@style/BtnConfig"
            android:background="@drawable/bkgd_button_contra_editar_perfil"
            android:text="@string/cambiarContra_editarPerfil"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button1_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/editText_celular_editarPerfil"
            app:layout_constraintVertical_bias="0.2" />

        <Button
            android:id="@+id/button2_aceptar_editarPerfil"
            style="@style/BtnConfig"
            android:background="@drawable/bkgd_button_aceptar_editar_perfil"
            android:text="@string/finalizarBtn_registro4"
            android:textSize="@dimen/text_size_parrafo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline1_button2_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/editText_celular_editarPerfil"
            app:layout_constraintVertical_bias="0.2" />

        <View
            android:id="@+id/separador_editarPerfil"
            style="@style/ViewSeparador"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="80:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/button1_cambiarContra_editarPerfil"
            app:layout_constraintVertical_bias="0.1"/>

        <Button
            android:id="@+id/button_eliminarCuenta_editarPerfil"
            style="@style/BtnRojoClaro"
            android:text="@string/eliminarCuenta_editarPerfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editView_editarPerfil"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_editarPerfil"
            app:layout_constraintTop_toBottomOf="@id/separador_editarPerfil"
            app:layout_constraintVertical_bias="0.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
