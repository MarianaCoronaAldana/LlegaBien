<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:background="@drawable/bkgd_esquinas_redondeadas"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_textView_button_confirmarEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_textView_button_confirmarEmergencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <TextView
        android:id="@+id/textView_titulo_confirmarEmergencia"
        style="@style/TxtViewTransparente"
        android:textSize="@dimen/text_size_subtitulo"
        android:text="@string/titulo_dialogConfirmarEmergencia"
        android:fontFamily="@font/subtitulo"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_button_confirmarEmergencia"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_button_confirmarEmergencia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/textView_pregunta_confirmarEmergencia"
        style="@style/TxtViewTransparente"
        android:textSize="@dimen/text_size_subtitulo"
        android:text="@string/pregunta_dialogConfirmarEmergencia"
        android:textColor="@color/rojo_claro"
        android:fontFamily="@font/subtitulo"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="9:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_button_confirmarEmergencia"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_button_confirmarEmergencia"
        app:layout_constraintTop_toBottomOf="@id/textView_titulo_confirmarEmergencia"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/button_confirmar_confirmarEmergencia"
        style="@style/BtnRojoClaro"
        android:text="@string/confirmar_dialogConfirmarEmergencia"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="6:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_button_confirmarEmergencia"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_button_confirmarEmergencia"
        app:layout_constraintTop_toBottomOf="@id/textView_pregunta_confirmarEmergencia"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>