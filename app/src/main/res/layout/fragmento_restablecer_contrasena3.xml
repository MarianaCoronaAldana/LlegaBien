<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:onClick="hideKeyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true"
    tools:context=".frontend.usuario.fragmento.FragmentoRestablecerContrasena1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_parentPrincipal_restablecer_contraseña_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bkgd_esquinas_superiores_redondeadas">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_editView_restablecer_contraseña_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_restablecer_contraseña_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_editView_restablecer_contraseña_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3_textView_editView_restablecer_contraseña_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_restablecer_contraseña_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4_textView_editView_restablecer_contraseña_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <Button
            android:id="@+id/button_regresar_restablecer_contraseña_3"
            style="@style/BtnRegresar1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline1_button_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView_titulo_restablecer_contraseña_3"
            style="@style/TxtViewBlanco"
            android:text="@string/titulo_inicia_sesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_3"
            app:layout_constraintTop_toTopOf="@id/button_regresar_restablecer_contraseña_3"
            app:layout_constraintVertical_bias="0.18" />

        <TextView
            android:id="@+id/textView_instrucciones1_restablecer_contraseña_3"
            style="@style/TxtViewAzulOscuro"
            android:text="@string/instrucciones_restablecer_contraseña"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_3"
            app:layout_constraintTop_toBottomOf="@id/textView_titulo_restablecer_contraseña_3"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView_instrucciones2_restablecer_contraseña_3"
            style="@style/TxtViewTransparente"
            android:text="@string/instrucciones1_restablecer_contraseña_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_3"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones1_restablecer_contraseña_3"
            app:layout_constraintVertical_bias="0.05" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLyt_contraseña_restablecer_contraseña_3"
            style="@style/EditTextTransparente"
            android:padding="0dp"
            android:hint="@string/contraseñaEditTxt"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_3"
            app:layout_constraintTop_toBottomOf="@id/textView_instrucciones2_restablecer_contraseña_3"
            app:layout_constraintVertical_bias="0.06">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1_icon_contraseña_restablecer_contraseña_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.88" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2_icon_contraseña_restablecer_contraseña_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <Button
                android:id="@+id/button_mostrarContra_contraseña_restablecer_contraseña_3"
                style="@style/BkgdIconContraseña"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2_icon_contraseña_restablecer_contraseña_3"
                app:layout_constraintStart_toStartOf="@id/guideline1_icon_contraseña_restablecer_contraseña_3"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_contraseña_restablecer_contraseña_3"
                style="@style/EditTextTransparente"
                android:background="@android:color/transparent"
                android:hint="@string/nuevaContra"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline1_icon_contraseña_restablecer_contraseña_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consLyt_confirmarContraseña_restablecer_contraseña_3"
            style="@style/EditTextTransparente"
            android:padding="0dp"
            android:hint="@string/contraseñaEditTxt"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintEnd_toEndOf="@id/guideline4_textView_editView_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_textView_editView_restablecer_contraseña_3"
            app:layout_constraintTop_toBottomOf="@+id/consLyt_contraseña_restablecer_contraseña_3"
            app:layout_constraintVertical_bias="0.07">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1_icon_confirmarContraseña_restablecer_contraseña_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.88" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2_icon_confirmarContraseña_restablecer_contraseña_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <Button
                android:id="@+id/button_mostrarContra_confirmarContra_restablecer_contraseña_3"
                style="@style/BkgdIconContraseña"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2_icon_confirmarContraseña_restablecer_contraseña_3"
                app:layout_constraintStart_toStartOf="@id/guideline1_icon_confirmarContraseña_restablecer_contraseña_3"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_confirmarContraseña_restablecer_contraseña_3"
                style="@style/EditTextTransparente"
                android:background="@android:color/transparent"
                android:hint="@string/confirmarContraseñaEditTxt"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline1_icon_confirmarContraseña_restablecer_contraseña_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_aceptar_restablecer_contraseña_3"
            style="@style/BtnMoradoOscuro"
            android:text="@string/aceptarBtn_cambiarContra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_restablecer_contraseña_3"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_restablecer_contraseña_3"
            app:layout_constraintTop_toBottomOf="@+id/consLyt_confirmarContraseña_restablecer_contraseña_3"
            app:layout_constraintVertical_bias="0.2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>