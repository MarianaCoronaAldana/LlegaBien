<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".frontend.mapa.fragmento.FragmentoIndicaciones">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_textView_editText_indicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_btnTiempoBici_indicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_btnTiempoCaminando_indicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_btnComenzar_indicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_btnComenzar_indicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_miniBtn_navegacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.83" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_textView_editText_indicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView_permisos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_partidaDestino_indicaciones"
        style="@style/ConsLytTituloBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="7:2"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editText_indicaciones"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_editText_indicaciones"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_iconRegresar_partidaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_iconRegresar_partidaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.105" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_icon_partidaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_icon_partidaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_iconIntercambiarDireccion_partidaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_iconIntercambiarDireccion_partidaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <Button
            android:id="@+id/button_regresar_partidaDestino"
            style="@style/BkgdIcon"
            android:background="@drawable/bkgd_button_regresar_3"
            app:layout_constraintBottom_toBottomOf="@id/separador_partidaDestino_indicaciones"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/guideline2_iconRegresar_partidaDestino"
            app:layout_constraintStart_toStartOf="@id/guideline1_iconRegresar_partidaDestino"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/icon_partidaDestino"
            style="@style/BkgdIcon"
            android:background="@drawable/bkgd_icon_partida_destino"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:9"
            app:layout_constraintEnd_toEndOf="@id/guideline2_icon_partidaDestino"
            app:layout_constraintStart_toStartOf="@id/guideline1_icon_partidaDestino"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_intercambiarDireccion_partidaDestino"
            style="@style/BkgdIcon"
            android:background="@drawable/bkgd_icon_intecambiar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_iconIntercambiarDireccion_partidaDestino"
            app:layout_constraintStart_toStartOf="@id/guideline1_iconIntercambiarDireccion_partidaDestino"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_puntoPartida_indicaciones"
            style="@style/EditTextTransparente"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:hint="@string/puntoPartida_indicaciones"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/text_size_parrafo_medium"
            app:layout_constraintBottom_toBottomOf="@id/separador_partidaDestino_indicaciones"
            app:layout_constraintEnd_toEndOf="@id/guideline1_iconIntercambiarDireccion_partidaDestino"
            app:layout_constraintStart_toStartOf="@id/guideline2_icon_partidaDestino"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/separador_partidaDestino_indicaciones"
            style="@style/ViewSeparador"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="200:1"
            app:layout_constraintEnd_toEndOf="@id/guideline1_iconIntercambiarDireccion_partidaDestino"
            app:layout_constraintStart_toStartOf="@id/guideline2_icon_partidaDestino"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <Button
            android:id="@+id/button_puntoDestino_indicaciones"
            style="@style/EditTextTransparente"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:hint="@string/puntoDestino_indicaciones"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/text_size_parrafo_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline1_iconIntercambiarDireccion_partidaDestino"
            app:layout_constraintStart_toStartOf="@id/guideline2_icon_partidaDestino"
            app:layout_constraintTop_toTopOf="@id/separador_partidaDestino_indicaciones" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_tiempoBici_indicaciones"
        style="@style/BtnMoradoOscuro"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="7:2"
        app:layout_constraintEnd_toEndOf="@id/guideline2_btnTiempoBici_indicaciones"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_editText_indicaciones"
        app:layout_constraintTop_toBottomOf="@id/consLyt_partidaDestino_indicaciones"
        app:layout_constraintVertical_bias="0.03">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_btnTiempoBici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_btnTiempoBici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <View
            android:id="@+id/iconBici_btnTimepoBici"
            style="@style/BkgdIcon"
            android:layout_height="20dp"
            android:background="@drawable/bkgd_icon_bicicleta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_btnTiempoBici"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_btnTiempoBici"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_btnTiempoBici"
            style="@style/TxtViewTransparente"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/tiempoBiciBtn_indicaciones"
            android:textColor="@color/blanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_btnTiempoBici"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/iconBici_btnTimepoBici"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_tiempoCaminando_indicaciones"
        style="@style/ConsLytTituloBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="7:2"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editText_indicaciones"
        app:layout_constraintStart_toStartOf="@id/guideline1_btnTiempoCaminando_indicaciones"
        app:layout_constraintTop_toBottomOf="@id/consLyt_partidaDestino_indicaciones"
        app:layout_constraintVertical_bias="0.03">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_btnTiempoCaminando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_btnTiempoCaminando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <View
            android:id="@+id/iconCaminando_btnTimepoCaminando"
            style="@style/BkgdIcon"
            android:layout_height="20dp"
            android:background="@drawable/bkgd_icon_caminar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_btnTiempoCaminando"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_btnTiempoCaminando"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_btnTiempoCaminando"
            style="@style/TxtViewTransparente"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/tiempoCaminandoBtn_indicaciones"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_button_btnTiempoCaminando"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/iconCaminando_btnTimepoCaminando"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_centrarMapa_indicaciones"
        style="@style/BtnCentrarMapa"
        app:layout_constraintBottom_toTopOf="@id/consLyt_detallesRuta_indicaciones"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editText_indicaciones"
        app:layout_constraintStart_toStartOf="@id/guideline1_miniBtn_navegacion"
        app:layout_constraintTop_toBottomOf="@id/button_tiempoCaminando_indicaciones"
        app:layout_constraintVertical_bias="0.95">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_icon_centrarMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_icon_centrarMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <View
            android:id="@+id/icon_centrarMapa"
            style="@style/BkgdIcon"
            android:background="@drawable/bkgd_icon_centrar_mapa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_icon_centrarMapa"
            app:layout_constraintStart_toStartOf="@id/guideline1_icon_centrarMapa"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLyt_detallesRuta_indicaciones"
        style="@style/ConsLytTituloBlanco"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="7:2"
        app:layout_constraintEnd_toEndOf="@id/guideline2_textView_editText_indicaciones"
        app:layout_constraintStart_toStartOf="@id/guideline1_textView_editText_indicaciones"
        app:layout_constraintTop_toBottomOf="@id/button_tiempoBici_indicaciones"
        app:layout_constraintVertical_bias="0.9">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_textView_detallesRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_textView_detallesRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3_textView_detallesRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <TextView
            android:id="@+id/textView_tiempo_detallesRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/parrafo"
            android:gravity="center_vertical|start"
            android:textColor="@color/negro"
            android:textSize="@dimen/text_size_parrafo"
            android:textStyle="bold"
            android:text="39min"
            app:layout_constraintBottom_toTopOf="@id/guideline3_textView_detallesRuta"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_detallesRuta"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/guideline1_textView_detallesRuta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView_km_detallesRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/parrafo"
            android:gravity="center_vertical|start"
            android:text="2.1km"
            android:textColor="@color/negro"
            android:textSize="@dimen/text_size_parrafo_small"
            app:layout_constraintBottom_toTopOf="@id/guideline3_textView_detallesRuta"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_detallesRuta"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/textView_tiempo_detallesRuta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/textView_descripcionRuta_detallesRuta"
            style="@style/TxtViewTransparente"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:text="@string/descripcionRuta_indicaciones"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline2_textView_detallesRuta"
            app:layout_constraintStart_toStartOf="@+id/guideline1_textView_detallesRuta"
            app:layout_constraintTop_toTopOf="@id/guideline3_textView_detallesRuta"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_comenzar_indicaciones"
        style="@style/BtnMoradoOscuro"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="13:4"
        app:layout_constraintEnd_toEndOf="@id/guideline2_btnComenzar_indicaciones"
        app:layout_constraintStart_toStartOf="@id/guideline1_btnComenzar_indicaciones"
        app:layout_constraintTop_toTopOf="@id/consLyt_detallesRuta_indicaciones"
        app:layout_constraintVertical_bias="0.75">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1_button_btnComenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2_button_btnComenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3_button_btnComenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4_button_btnComenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <View
            android:id="@+id/iconComenzar_btnComenzar"
            style="@style/BkgdIcon"
            android:background="@drawable/bkgd_icon_comenzar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/guideline3_button_btnComenzar"
            app:layout_constraintStart_toStartOf="@id/guideline1_button_btnComenzar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_btnComenzar"
            style="@style/TxtViewTransparente"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/comenzarBtn_indicaciones"
            android:textColor="@color/blanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline4_button_btnComenzar"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/guideline3_button_btnComenzar"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>